{{ form_start(form) }}

<div class="row justify-content-between">
    <div class="col-12 col-lg-5 ml-auto">
        <h2 class="my-4">Identité de la structure</h2>
        {{ form_row(form.name, { label: 'Nom de la structure' }) }}
        {{ form_row(form.managerFirstname, { label: 'Prénom du responsable' }) }}
        {{ form_row(form.managerLastname, { label: 'Nom du responsable' }) }}
        {{ form_row(form.email, { label: 'Email' }) }}
        {{ form_row(form.password, { label: 'Mot de passe' }) }}
        {{ form_row(form.address, { label: 'Adresse de la structure' }) }}
        {{ form_row(form.technicalTeamId, { label: 'Identifiant de l\'équipe technique' }) }}
        {{ form_row(form.partnerId, { label: 'Identifiant du partenaire' }) }}
    </div>
    <div class="col-12 col-lg-5 mr-auto">
        <h2 class="my-4">Permissions de la structure</h2>
        {{ form_row(form.active, { label: 'Actif' }) }}
        {{ form_row(form.sellFood, { label: 'Vente de nourriture' }) }}
        {{ form_row(form.sellDrink, { label: 'Vente de boisson' }) }}
        {{ form_row(form.sendNewsletter, { label: 'Envoi de newsletter' }) }}
        {{ form_row(form.scheduleManagement, { label: 'Gestion de planning' }) }}
        {{ form_row(form.privateLesson, { label: 'Cours particuliers' }) }}
    </div>
</div>

<button class="btn btn-outline-primary ml-5 mt-2" onclick='return confirm("Etes-vous certain des modifications apportées ?")'>{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
