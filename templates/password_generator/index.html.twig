{% extends 'base.html.twig' %}

{% block title %}Générateur de mot de passe{% endblock %}

{% block body %}

<div class="container">
    {{ include('_navbar.html.twig') }}

    <h1 class="text-center mt-3 mb-5">Générateur de mot de passe</h1>

    <section>
        <p class="text-center mt-5 mb-2">
            Mot de passe généré à copier dans le formulaire:
        </p>
        <div class="d-flex justify-content-center">
        <textarea rows="1" id="passwordToCopy">{{ password }}</textarea>
            <button class="btn btn-outline-primary" id="btnCopy" onclick="btnGeneratePass()" title="Copier le mot de passe"><i class="fa-regular fa-copy fa-2x"></i></button>
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn btn-outline-primary mt-5" id="btnNewPass" title="Générer un nouveau mot de passe"><i class="fa-solid fa-key"></i></button>
        </div>
            

        <div class="d-flex justify-content-center mt-5">
            <button class="btn btn-outline-danger" onClick="window.close()">Fermer la fenêtre</button>
        </div>
    </section>
    {% include('_footer.html.twig') %}
</div>
{% endblock %}
